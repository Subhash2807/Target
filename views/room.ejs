<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- <meta http-equiv="refresh" content="5"> -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/room.css">

    <script>
        const myName = "<%= name %>"
        const myEmail = "<%= email %>"
        const roomId = "<%= room %>"
        const coaching = "<%= coaching %>"
    </script>

    <title>Class</title>
</head>
<body>
    <div class="body">
        <div class="side_bar">
            <div class="head">
                <div class="left">
                    <img src="/img/contact.svg" alt="contact">
                    <h4>Contacts</h4>
                </div>
                <div class="right">
                    <img src="/img/message.svg" alt="message">
                    <h4>Messages</h4>
                </div>
            </div>

            <div class="head_contacts">
               
            </div>
            <div class="head_messages">

                <div class="bottom_send">
                <input type="text" class="text">

                <label class="file-upload">
                    <input type="file" class="file" id="file-upload">
                    <img src="/img/download.svg" alt="upload">
                 </label>
                 
                <button id="msg">send msg</button>
                </div>

            </div>

        </div>
        <div class="room">
            <div class="nav">
                <h1> <span id="presenter"><%= name %> </span>is presenting...</h1>
                <!-- <button class="zoomIn">zoomIn</button>
                <button class="zoomOut">ZoomOut</button> -->
                <button id="side"><img src="/img/right.svg" alt="arrow"></button>
            </div>
            <div class="video">
                <video id="main_video" controls autoplay></video>
            </div>
            <div class="bottom">
                <img src="/img/microphone.svg" alt="microphone" class='mic'>
                <img src="/img/phone.svg" alt="disconnect" style="padding:5px" class='disconnect'>
                <img src="/img/video-camera.svg" alt="video" class='camera'>
                <label class="present">
                    <button id="present"></button>
                     <svg width="24" height="24" viewBox="0 0 24 24" focusable="false" class="Hdh4hc cIGbvc NMm5M"><path style="fill:#2196F3" d="M21 3H3c-1.11 0-2 .89-2 2v14c0 1.11.89 2 2 2h18c1.11 0 2-.89 2-2V5c0-1.11-.89-2-2-2zm0 16.02H3V4.98h18v14.04zM8 12l4-4 4 4-1.41 1.41L13 11.83V16h-2v-4.17l-1.59 1.59L8 12z"></path></svg>
                </label>
            </div>
        </div>
        
    </div>
    <script id="cont_temp" type="text/html">
        <div class="contact_temp" onclick="test(this)">
            <div class="image">
                <video id="{{videoId}}" autoplay></video>
            </div>
            <div class="name">
                {{username}}
            </div>
        </div>
    </script>
    <script id="msg_temp_text" type="text/html">
        <div class="message_temp">
            <p>
                <span class="message_name">{{username}}</span> 
                <span class="message_meta"> {{createdAt}} </span>
            </p>
            <p>
                {{message}}
            </p>
        </div>
    </script>

    <script id="msg_temp_img" type="text/html">
        <span class="message_name">{{username}}</span> 
        <span class="message_meta"> {{createdAt}} </span>
        <img src="{{src}}" alt="img" download>

    </script>

    <script id="msg_temp_file" type="text/html">
        <span class="message_name">{{username}}</span> 
        <span class="message_meta"> {{createdAt}} </span>
        <a href="{{href}}"download="{{downloadName}}">{{fileName}}</a>

    </script>

</body>
